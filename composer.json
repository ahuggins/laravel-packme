{
  "name": "ptondereau/laravel-packer",
  "description": "A starter pack for developing a package with Laravel 5",
  "keywords": ["laravel", "framework", "provider", "package", "starter", "packer"],
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Pierre Tondereau",
      "email": "contact@ptonderau.io"
    }
  ],
  "require": {
    "php": ">=5.5.9",
    "illuminate/contracts": "5.1.*|5.2.*|5.3.*",
    "illuminate/support": "5.1.*|5.2.*|5.3.*"
  },
  "require-dev": {
    "graham-campbell/testbench": "^3.1",
    "mockery/mockery": "^0.9.4",
    "phpunit/phpunit": "^4.8|^5.0"
  },
  "autoload": {
    "psr-4": {
      "YourVendor\\YourPackage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "YourVendor\\Tests\\YourPackage\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.gitattributes.example', '.gitattributes');\""
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}